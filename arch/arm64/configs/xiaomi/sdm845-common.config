# Localversion
CONFIG_LOCALVERSION="-tanz-miui"

# Backlight
# CONFIG_LCD_CLASS_DEVICE is not set

# Exfat
CONFIG_EXFAT_FS=y

# Initramfs
CONFIG_INITRAMFS_IGNORE_SKIP_FLAG=y

# Platform
CONFIG_MACH_XIAOMI=y

# Pstore
CONFIG_CMDLINE="ramoops_memreserve=4M"
CONFIG_CMDLINE_EXTEND=y
CONFIG_PSTORE=y
CONFIG_PSTORE_CONSOLE=y
CONFIG_PSTORE_PMSG=y
CONFIG_PSTORE_RAM=y
CONFIG_BLK_WBT=y
CONFIG_BLK_WBT_SQ=y
CONFIG_MTD=y
CONFIG_MTD_BLOCK=y
CONFIG_MTD_OOPS=y
CONFIG_MTD_BLOCK2MTD=y

# QCACLD
CONFIG_QCA_CLD_WLAN=y

# vDSO
CONFIG_COMPAT_VDSO=y
