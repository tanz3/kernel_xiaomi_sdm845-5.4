	bool "beryllium board"
	select MACH_XIAOMI_SDM845
	help
	  Support for Xiaomi Poco F1.

config MACH_XIAOMI_E1S
	bool "equuleus board"
	select MACH_XIAOMI_SDM845
	help
	  Support for Xiaomi MI 8 Pro.

