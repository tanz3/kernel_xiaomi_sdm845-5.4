	bool "perseus board"
	select MACH_XIAOMI_SDM845
	help
	  Support for Xiaomi MIX 3.

config MACH_XIAOMI_E8
	bool "ursa board"
	select MACH_XIAOMI_SDM845
	help
	  Support for Xiaomi MI 8 Explorer Edition.

