menu "Machine selection"

config MACH_XIAOMI_SDM845
	bool "Support for Xiaomi sdm845 platform"
	depends on MACH_XIAOMI
	help
	  Say Y here to enable support for Xiaomi sdm845 platform.

# Machines
config MACH_XIAOMI_D5X
	bool "polaris board"
	select MACH_XIAOMI_SDM845
	help
	  Support for Xiaomi MIX 2S.

